<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.playlistMapper">
	<insert id="insert">
		insert into playlists(owner,title,cover) values(#{owner},#{title},#{cover})
	</insert>
	<select id="getAll" resultType="com.stt.domain.PlaylistVO">
		select * from playlists where owner=#{owner}
	</select>
	<select id="getOne" resultType="com.stt.domain.PlaylistVO">
		select * from playlists where id=#{id}
	</select>
	<delete id="delete">
		delete from playlists where id=#{id}
	</delete>
	<select id="getLastId" resultType="int">
		select LAST_INSERT_ID()
	</select>
</mapper>